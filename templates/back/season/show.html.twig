{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>EpisodesNumber</th>
                <td>{{ season.episodesNumber }}</td>
            </tr>
            <tr>
                <th>Movie</th>
            <td>{{ season.movie.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_season_index') }}" class="btn btn-primary mb-2">back to list</a>

    <a href="{{ path('app_season_edit', {'id': season.id}) }}" class="btn btn-warning mb-2">edit</a>

